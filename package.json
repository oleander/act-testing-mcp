{
  "name": "act-testing-mcp",
  "version": "1.1.2",
  "description": "MCP server for testing GitHub Actions workflows locally using nektos/act",
  "type": "module",
  "main": "index.js",
  "bin": {
    "act-testing-mcp": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "ava test/**/*.test.js",
    "test:coverage": "c8 ava test/**/*.test.js",
    "test:watch": "ava test/**/*.test.js --watch",
    "dev": "node --inspect index.js",
    "docker:build": "./build-docker.sh",
    "docker:run": "./run-docker.sh",
    "compatibility:baseline": "node scripts/check-act-compatibility.js create-baseline",
    "compatibility:check": "node scripts/check-act-compatibility.js check",
    "compatibility:report": "node scripts/check-act-compatibility.js report",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm run test && changeset publish --provenance",
    "release": "pnpm run changeset:version && pnpm run changeset:publish",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "echo 'No linter configured yet'",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "ava": "^6.4.0",
    "c8": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "mcp",
    "github-actions",
    "act",
    "testing",
    "model-context-protocol",
    "nektos-act",
    "workflow-testing",
    "ci-cd"
  ],
  "author": "Garth Braithwaite",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GarthDB/act-testing-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/GarthDB/act-testing-mcp/issues"
  },
  "homepage": "https://github.com/GarthDB/act-testing-mcp#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "provenance": true
  },
  "files": [
    "index.js",
    "utils/",
    "README.md",
    "LICENSE",
    "docs/GUIDE.md",
    "docs/SETUP.md",
    "docs/TESTING.md",
    "docs/DEPENDENCY_MONITORING.md"
  ],
  "lint-staged": {
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write"
    ]
  }
}
